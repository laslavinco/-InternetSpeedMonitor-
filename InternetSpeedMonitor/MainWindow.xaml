<Window x:Class="InternetSpeedMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InternetSpeedMonitor"
        mc:Ignorable="d"
        Title="Internet Speed Monitor" Height="200" Width="330"
        Name="InternetSpeedMonitor"
        WindowStartupLocation="Manual"
        Topmost="False"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <BitmapImage x:Key="Connected" UriSource="Resources/connected.ico"/>
        <BitmapImage x:Key="Disconnected" UriSource="Resources/disconnected.ico"/>
        <ControlTemplate x:Key="validationTemplate">
            <Grid>
                <Label Foreground="Red" HorizontalAlignment="Right" VerticalAlignment="Center">Please insert a integer</Label>
                <Border BorderThickness="1" BorderBrush="Red">
                    <AdornedElementPlaceholder />
                </Border>
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    


    <Grid Margin="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right">
            <ToggleButton x:Name="PinOnTopButton" Click="PinOnTopButtonClicked" Margin="4">
                <Image Source="Resources/pin.ico"/>
            </ToggleButton>
            <Button x:Name="MinimizeButton" Margin="4" Click="MinimizeButton_Click">
                <Image Source="Resources/mini.ico"/>
            </Button>
            <Button x:Name="CloseButton" Margin="4" Click="CloseButton_Click">
                <Image Source="Resources/close.ico"/>
            </Button>
        </StackPanel>

        <Rectangle Grid.Row="1" Fill="LightGreen" Grid.ColumnSpan="2"/>
        <Image x:Name="NetworkConnectionIcon" Source="{DynamicResource ResourceKey=Disconnected}" HorizontalAlignment="Left" Margin="5" Grid.Row="1"/>
        <TextBlock x:Name="TitleTextBlock" Text="Internet Speed Monitor" Foreground="Black" Grid.Row="1" Margin="60 12 0 0" FontSize="18" FontWeight="ExtraBold" Grid.ColumnSpan="2"/>
        
        
        
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="3">
            
            <TextBlock x:Name="NetworkSpeedLable" Text="Total Speed :" Margin="3" FontSize="12" FontWeight="DemiBold"/>
            <TextBlock x:Name="NetworkSpeed" Text="{Binding NetworkSpeed}" Margin="3" FontSize="12" FontWeight="DemiBold"/>

            <StackPanel Orientation="Horizontal">
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            </StackPanel>

            <TextBlock x:Name="UploadedDataLable" Text=" Uploaded :" Margin="3" FontSize="12" FontWeight="DemiBold"/>
            <TextBlock x:Name="UploadedData" Text="{Binding UploadedData}" Margin="3" FontSize="12" FontWeight="DemiBold"/>

            <StackPanel Orientation="Horizontal">
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            </StackPanel>
            
            <TextBlock x:Name="DownloadedDataLable" Text=" Downloaded :" Margin="3" FontSize="12" FontWeight="DemiBold"/>
            <TextBlock x:Name="DownloadedData" Text="{Binding DownloadedData}" Margin="3" FontSize="12" FontWeight="DemiBold"/>

        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="3" Grid.ColumnSpan="2">
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
        </StackPanel>

        <Image x:Name="downloadIcon" Source="Resources/downArrow.ico" Margin="10" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="downloadTextBlock" Text="{Binding DownloadSpeed, NotifyOnTargetUpdated=True}" TargetUpdated="DownloadTextBlock_TargetUpdated" Grid.Row="4" Grid.Column="0" FontSize="32" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Image x:Name="uploadIcon" Source="Resources/upArrow.ico" Margin="10" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="uploadTextBlock" Text="{Binding UploadSpeed}" Grid.Column="1" Grid.Row="4" FontSize="32" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>
